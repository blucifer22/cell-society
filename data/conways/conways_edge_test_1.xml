<!DOCTYPE xml>
<xml>
  <General>
    <Name>Conway's Game of Life</Name>
    <Type>Conway</Type>
    <Author>Marc Chmielewski</Author>
    <Description>This is an edge case test for Conway's Game of Life</Description>
  </General>
  <GeometricConfiguration>
    <CellShape>Rectangle</CellShape>
    <Height>25</Height>
    <Width>25</Width>
  </GeometricConfiguration>
  <SimulationParameters>
    <AliveNumberMin>2</AliveNumberMin>
    <AliveNumberMax>3</AliveNumberMax>
    <SpawnNumberMin>3</SpawnNumberMin>
    <SpawnNumberMax>3</SpawnNumberMax>
  </SimulationParameters>
  <!--
  Initial states should only be specified for non-default states, i.e. only specify
  initially live cells.
   -->
  <InitialStates>
    <Cell>
      <Row>1</Row>
      <Column>0</Column>
      <State>1</State>
    </Cell>
    <Cell>
      <Row>2</Row>
      <Column>1</Column>
      <State>1</State>
    </Cell>
    <Cell>
      <Row>2</Row>
      <Column>2</Column>
      <State>1</State>
    </Cell>
    <Cell>
      <Row>1</Row>
      <Column>2</Column>
      <State>1</State>
    </Cell>
    <Cell>
      <Row>0</Row>
      <Column>2</Column>
      <State>1</State>
    </Cell>
  </InitialStates>
</xml>